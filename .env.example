# PostgreSQL Configuration
POSTGRES_USER=videowatchlog
POSTGRES_PASSWORD=password
POSTGRES_DB=videowatchlog

# Backend Configuration
SPRING_PROFILES_ACTIVE=dev
DB_HOST=db
DB_NAME=videowatchlog
DB_USER=videowatchlog
DB_PASSWORD=password

# CORS Configuration
# フロントエンドのオリジンを指定（カンマ区切りで複数指定可）
# デフォルト: http://localhost:3000
# ポート 3001 を使用する場合: CORS_ALLOWED_ORIGINS=http://localhost:3001
# 複数オリジン: CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Frontend Configuration
# バックエンド URL を指定（ポート番号を変更した場合は更新が必要）
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# Docker Compose Port Configuration
# ローカルで使用するポート番号（ホスト側）
DB_PORT=5432
BACKEND_PORT=8080
FRONTEND_PORT=3000

# Environment
ENVIRONMENT=development
